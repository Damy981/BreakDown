<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.arkanoid">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@drawable/ball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ball"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Activities.GameActivity"/>
        <activity android:name=".Activities.LevelEditorActivity"/>
        <activity android:name=".Activities.LoginActivity"/>
        <activity android:name=".Activities.MenuActivity"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".Activities.SplashScreenActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.RegistrationActivity"/>
        <activity android:name=".Activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".Classes.DateChangeReceiver" >
        <intent-filter>
            <action android:name="android.intent.action.DATE_CHANGED" />
        </intent-filter>
    </receiver>
    </application>

</manifest>