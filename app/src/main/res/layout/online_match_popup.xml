<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tvMatchSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/match_summary"
        android:fontFamily="@font/londrina_solid"
        android:textSize="30sp"
        android:textColor="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <LinearLayout
        android:id="@+id/llPlayer1"
        android:layout_width="185dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38">

        <TextView
            android:id="@+id/tvPopupPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid"
            android:text="@string/player_1"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvFirstMatchScoreP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid"
            android:text="@string/first_match"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvSecondMatchScoreP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid"
            android:text="@string/second_match"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvThirdMatchScoreP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid"
            android:text="@string/third_match"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPlayer2"
        android:layout_width="190dp"
        android:layout_height="489dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368">

        <TextView
            android:id="@+id/tvPopupPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid"
            android:text="@string/player_2"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvFirstMatchScoreP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid"
            android:text="@string/first_match"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvSecondMatchScoreP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid"
            android:text="@string/second_match"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvThirdMatchScoreP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/londrina_solid"
            android:text="@string/third_match"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/londrina_solid"
        android:text="@string/winner"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889" />

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        android:background="@drawable/effect_button"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="@string/todo" />

</androidx.constraintlayout.widget.ConstraintLayout>